source_set("glue") {
  sources = [
    "stack_trace.h",
    "trace_event.h",
    "task_runner_adaptor.h",
    "task_runner_adaptor.cc",
  ]

  deps = [
    "//lib/ftl",
  ]

  if (is_fuchsia || is_fuchsia_host) {
    sources += [ "stack_trace_fuchsia.cc" ]

    public_deps = [
      "//apps/tracing/lib/trace",
    ]
  } else {
    sources += [ "stack_trace_base.cc" ]

#    deps += [ "//flutter/fml" ]
    deps += [ "//base" ]
  }
}
