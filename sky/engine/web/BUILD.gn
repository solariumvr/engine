source_set("web") {
  sources = [
    "Sky.cpp",
  ]

  deps = [
    "//flutter/sky/engine/core",
    "//flutter/sky/engine/platform",
  ]

  configs += [
    "//flutter/sky/engine:config",
    "//flutter/sky/engine:inside_blink",
    "//flutter/sky/engine:non_test_config",
  ]

  if (is_fuchsia) {
    deps += [ "//lib/mtl/tasks" ]
  } else {
    deps += [ "//flutter/fml" ]
  }
}
